const allPosts = Object.values(
  import.meta.glob("../posts/*.md", { eager: true })
);
const tags = [
  ...new Set(allPosts.map((tag: any) => tag.frontmatter.tags).flat()),
];

// const tags = [
//   "astro",
//   "successes",
//   "community",
//   "blogging",
//   "setbacks",
//   "learning in public",
// ];

const pageTitle = "Tag Index";
---

<style>
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 2px #000000;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <h3>Array of Tags:</h3>
  <div class="tags">
    {
      tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
